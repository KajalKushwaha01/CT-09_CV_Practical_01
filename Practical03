% Read the image
img = imread("C:\Users\student\Downloads\cat.jfif"); % Replace with your image filename
% Convert to grayscale if it is a color image
if size(img, 3) == 3
   img = rgb2gray(img);
end
% Extract HOG features and visualization
[features, visualization] = extractHOGFeatures(img);
% Display the original image and HOG visualization
figure;
subplot(1,2,1);
imshow(img);
title('Original Image');
subplot(1,2,2);
plot(visualization);
title('HOG Features Visualization');
